<Window
    x:Class="GamifiedInputApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GamifiedInputApp"
    xmlns:minigames="using:GamifiedInputApp.Minigames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Root">
        <Grid.Resources>
            <DataTemplate x:Key="CategoryTemplate" x:DataType="local:MinigameItem">
                <TreeViewItem ItemsSource="{x:Bind Children}">
                    <TextBlock Text="{x:Bind Content}"/>
                </TreeViewItem>
            </DataTemplate>
            <DataTemplate x:Key="MinigameTemplate" x:DataType="local:MinigameItem">
                <TreeViewItem>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{x:Bind Info}" HorizontalAlignment="Stretch" Grid.Column="0"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                            <Image Width="20" Source="Images/DeviceTypes/mouse.png" Visibility="{x:Bind MouseVisibility}"/>
                            <Image Width="20" Source="Images/DeviceTypes/touch.png" Visibility="{x:Bind TouchVisibility}"/>
                            <Image Width="20" Source="Images/DeviceTypes/pen.png" Visibility="{x:Bind PenVisibility}"/>
                            <Image Width="20" Source="Images/DeviceTypes/key.png" Visibility="{x:Bind KeyVisibility}"/>
                        </StackPanel>
                    </Grid>
                </TreeViewItem>
            </DataTemplate>
            <local:MinigameTemplateSelector x:Key="MinigameTemplateSelector"
                CategoryTemplate="{StaticResource CategoryTemplate}" MinigameTemplate="{StaticResource MinigameTemplate}" />
        </Grid.Resources>
        <StackPanel x:Name="Menu" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TreeView x:Name="MinigamePicker" MinWidth="400" MaxHeight="400" Margin="10,10,10,10"
                          HorizontalAlignment="Center" VerticalAlignment="Top" SelectionMode="Multiple"
                          ItemsSource="{x:Bind DataSource}" ItemTemplateSelector="{StaticResource MinigameTemplateSelector}"
                          SelectionChanged="MinigamePicker_SelectionChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="True" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
                <Button x:Name="StartButton" Click="startButton_Click">Start</Button>
            </StackPanel>
            <StackPanel x:Name="InputDevicePickers" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <CheckBox x:Name="MouseInputPicker" Content="Mouse" IsThreeState="True" Width="100"
                    Checked="InputPicker_Checked" Unchecked="InputPicker_Unchecked" Indeterminate="InputPicker_Indeterminate"/>
                <CheckBox x:Name="TouchInputPicker" Content="Touch" IsThreeState="True" Width="100"
                    Checked="InputPicker_Checked" Unchecked="InputPicker_Unchecked" Indeterminate="InputPicker_Indeterminate"/>
                <CheckBox x:Name="PenInputPicker" Content="Pen" IsThreeState="True" Width="100"
                    Checked="InputPicker_Checked" Unchecked="InputPicker_Unchecked" Indeterminate="InputPicker_Indeterminate"/>
                <CheckBox x:Name="KeyInputPicker" Content="Keyboard" IsThreeState="True" Width="100"
                    Checked="InputPicker_Checked" Unchecked="InputPicker_Unchecked" Indeterminate="InputPicker_Indeterminate"/>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="Results" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="ScoreText" FontWeight="Bold" FontSize="20" Margin="10,10,10,10"/>
            <Button x:Name="GoToMenuButton" Click="GoToMenuButton_Click">Main Menu</Button>
        </StackPanel>
    </Grid>
    
</Window>
